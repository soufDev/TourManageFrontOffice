<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".encaisement_activity"
    android:id="@+id/relativeLayout1">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#0095B6"
        android:id="@+id/relativeLayout">

        <TextView

            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="5dp"
            android:id="@+id/login_dispalay" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="#AF002A"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:text="Deconnexion"
            android:id="@+id/textView" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home_menu"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:id="@+id/btnAcceuil"
            android:adjustViewBounds="false" />
        <ImageButton
            android:id="@+id/btndeconnexion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/close"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />
    </RelativeLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:gravity="center"
                android:padding="2dp"
                android:text="NÂ°Encaisement"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:background="#000000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Date"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:background="#000000"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Mode de payement"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#000000"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:padding="2dp"
                android:text="Client"
                android:textColor="#fff" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#000000"
                android:padding="2dp"
                android:text="ID fact"
                android:textColor="#fff"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#000000"
                android:padding="2dp"
                android:text="Motif"
                android:textColor="#fff"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="350dp"
        android:text="Encaisser une facture"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="350dp"
        android:text="Avan sur une comde"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="400dp"
        android:text="Autre"/>
</RelativeLayout>